<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/get_ids_available_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="OS Permission Subscription State"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/browser_actions_bg_grey"/>

        <EditText
            android:id="@+id/edt_heading"
            android:hint="Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/edt_contents"
            android:hint="Contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:inputType="text"/>

        <Switch
            android:id="@+id/set_subscription_switch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Set Subscription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:checked="true"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>